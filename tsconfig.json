{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true, // prevents errors on node_modules/@types/react-native/globals
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["cypress", "db", "node_modules"],
  "include": ["./src/**/*"]
}
